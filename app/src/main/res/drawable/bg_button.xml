<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/bluishGrey"/>
            <corners
                android:radius="50dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/lightBlue"/>
            <corners
                android:radius="50dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/brightSkyBlue"
                android:angle="270" />
            <corners
                android:radius="50dp" />
        </shape>
    </item>
</selector>